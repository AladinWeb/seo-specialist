# Enable rewrite engine
RewriteEngine On
RewriteBase /

# === FORCE REDIRECT EVERYTHING TO HOMEPAGE ===
# Skip actual files and directories that might exist (like assets)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Exclude common asset extensions so they can load
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2|ttf|eot|pdf|zip)$ [NC]

# Redirect everything else (including non-existent pages) to homepage
RewriteRule ^(.*)$ / [R=302,L]

# Fallback: If you have a custom 404, disable it during this phase
# ErrorDocument 404 /